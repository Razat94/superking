@{
    ViewData["Title"] = "About Us";
}

<link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>

<section class = "px3">
    <div class="text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>

    <div class="container px3">
        <div class="row">
            <div class="col-lg-6 col-sm-12">
                <div class="aboutus">
                    <h4 class="aboutus-title">Mission Statement</h4>
                    <p class="aboutus-text">
                        Super King consistently delivers the highest quality of food products, at excellent values in clean stores. 
                        Our employees are our best partners in this endeavor, making Super King a desirable workplace. 
                        As our customers reflect the diversity of Southern California, so do our products.
                    </p>
                    
                </div>
            </div>

            <div class="col-lg-6 col-sm-12">
                <iframe class="aboutus-banner" height="250" title="Our statements video" src="https://www.youtube.com/embed/m1HjsbapOyg?rel=0" style="border: 0; width: 100%;">
                </iframe>
            </div>
        </div>
    </div>
</section>